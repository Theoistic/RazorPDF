@model RazorPDFWebTest.Views.PDFViews.NicePDFModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="content">
        <div class="header">
            <h1>Financial Report</h1>
            <p>As of @DateTime.Now.ToString("MMMM yyyy")</p>
        </div>
        @foreach(var item in Model.Items)
        {
            <div class="item">
                <span>@item.Name</span>
                <span>@item.Value</span>
            </div>
        }
    </div>
</body>
</html>